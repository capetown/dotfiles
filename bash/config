# Stuff for AccuRev
export ACCUREV_IGNORE_ELEMS=".git .gitignore out dist classes *.swp *.class report *.i* GenDevAcaXml.xmli target"

export EDITOR=vim
export AC_EDITOR_GUI=gvim

# rake bash completion
export COMP_WORDBREAKS=${COMP_WORDBREAKS/\:/}

_rakecomplete() {
  COMPREPLY=($(compgen -W "`rake -s -T | awk '{{print $2}}'`" -- ${COMP_WORDS[COMP_CWORD]}))
  return 0
}
complete -o default -o nospace -F _rakecomplete rake
